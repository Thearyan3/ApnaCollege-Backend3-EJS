        <img src= <%= post.image %> alt="some Img">
        <p>likes: <%= post.likes %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; comments: <%= post.comments %></p>
    <% } %>

    <script src="/app.js"></script>
    <%- include("includes/footer.ejs"); %>
</body>
</html>